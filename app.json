{
  "expo": {
    "name": "Trackr",
    "slug": "trackr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "trackr",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#121212"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo.png",
        "backgroundColor": "#121212"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/logo.png",
      "meta": {
        "themeColor": "#D8BFD8",
        "appleMobileWebAppCapable": "yes",
        "appleMobileWebAppStatusBarStyle": "default"
      },
      "manifest": {
        "short_name": "Trackr",
        "name": "Trackr",
        "start_url": "https://trackr.com.ng/",
        "display": "standalone",
        "background_color": "#121212",
        "theme_color": "#D8BFD8",
        "icons": [
          {
            "src": "./assets/images/logo.png",
            "sizes": "192x192",
            "type": "image/png"
          },
          {
            "src": "./assets/images/logo.png",
            "sizes": "512x512",
            "type": "image/png"
          }
        ]
      }
    },
    "plugins": [
      "expo-router",
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
